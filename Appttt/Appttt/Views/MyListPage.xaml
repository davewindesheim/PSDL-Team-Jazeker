<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Appttt.Views.MyListPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <!--
                currently flowlistview is the name of the List which we use to handle our Shop, if item tapped we redirect
                to the correct xaml for the route, more information could be found at Models/MyListNavigation.cs
            -->
        <ListView x:Name="flowlistview" ItemsSource="{Binding MyListCollector}" ItemTapped="Handle_ItemTapped" VerticalOptions="FillAndExpand" RowHeight="75">
            <ListView.ItemTemplate>
                <DataTemplate>
                <TextCell Detail="{Binding RouteDetail}" Text="{Binding RouteName}" />                
                </DataTemplate>              
                </ListView.ItemTemplate>                  
            </ListView>
    </ContentPage.Content>
</ContentPage>